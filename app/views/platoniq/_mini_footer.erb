<div class="mini-footer">
  <div class="row">
    <div class="medium-12 large-12 column">
      <a rel="license noopener" class="cc-badge"
         href="http://creativecommons.org/licenses/by-sa/4.0/"
         target="_blank">
        <%= image_pack_tag("media/images/cc-badge.png", alt: t("layouts.decidim.footer.cc_by_license")) %>
      </a>
      <%= t("platoniq.footer.made_with_open_source", repository: Rails.application.secrets.repository_url).html_safe %>
    </div>
    <div class="medium-12 large-12 column logos">
      <div class="decidim-logo platoniq-logo">
        <a rel="decidim noopener"
           href="http://platoniq.net/"
           target="_blank"
           title="<%= t("platoniq.footer.logo") %>">
          <span class="platoniq-text show-for-medium"><%= t("platoniq.footer.text") %></span>
          <%= image_pack_tag("media/images/platoniq-logo.png", alt: t("platoniq.footer.logo")) %>
        </a>
      </div>
      <div class="decidim-logo">
        <a rel="decidim noopener"
           href="https://decidim.org"
           target="_blank">
          <%= image_pack_tag("media/images/decidim-logo.svg", alt: t("layouts.decidim.footer.decidim_logo")) %>
        </a>
      </div>
    </div>
  </div>
</div>
