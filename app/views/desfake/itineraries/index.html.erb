<div class="wrapper">
  <div class="row column">
    <section class="section">
      <div class="row small-up-1 medium-up-2 large-up-3 card-grid">
        <% @itineraries.each do |itinerary| %>
          <div class="column" id="itinerary_<%= itinerary.id %>">
            <div class="card card--process">
              <%= link_to itinerary_path(itinerary) do %>
                <%= image_tag itinerary.hero_image, class: "card__image" %>
              <% end %>
              <div class="card__content">
                <div class="card__header">
                  <%= link_to itinerary_path(itinerary), class: "card__link" do %>
                    <div class="card__title"><%= translated_attribute itinerary.title %></div>
                  <% end %>
                  <div class="card__title">
                    <%= translated_attribute itinerary.subtitle %>
                  </div>
                </div>
                <div class="card__text">
                  <div class="card__text--paragraph">
                    <p><%= translated_attribute itinerary.description %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
