<div class="wrapper">
  <div class="row column">
    <section class="section">
      <h2 class="heading2">
        <%= translated_attribute @itinerary.title %>
      </h2>
      <h3 class="heading3">
        <%= translated_attribute @itinerary.subtitle %>
      </h3>
      <div class="section">
        <%= decidim_sanitize_editor translated_attribute(@itinerary.body) %>
      </div>
    </section>
    <section class="section" id="itineraries-processes-grid">
      <div class="row small-up-1 medium-up-2 large-up-3 card-grid">
        <%= cell "decidim/participatory_processes/filtered_participatory_processes", @itinerary.participatory_processes %>
      </div>
    </section>
  </div>
</div>
